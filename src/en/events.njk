---
layout: "layouts/base.njk"
title: "Private Events"
lang: en
---

<main>
    <section class="bg-cover bg-center" style="background-image: url('{{ events.banner_image }}');">
        <div class="h-full w-full bg-black bg-opacity-60 flex items-center justify-center py-24">
            <div class="text-center text-white p-4">
                <h1 class="text-4xl md:text-5xl font-bold font-display">{{ events.title }}</h1>
                <p class="mt-4 text-lg md:text-xl">{{ events.subtitle }}</p>
            </div>
        </div>
    </section>

    <section class="py-16 md:py-24 bg-white">
        <div class="container mx-auto px-6">
            {%- for section in events.sections -%}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center {% if not loop.last %}mb-16{% endif %}">
                <div class="{% if loop.index % 2 == 0 %}md:order-last{% endif %}">
                     <img src="{{ section.image }}" alt="{{ section.alt }}" class="rounded-lg shadow-xl w-full">
                </div>
                <div class="space-y-4">
                    <h2 class="text-3xl font-bold font-display text-gray-900">{{ section.title }}</h2>
                    <p class="text-gray-600 leading-relaxed">{{ section.description }}</p>
                </div>
            </div>
            {%- endfor -%}
        </div>
    </section>

    <section class="bg-gray-100 py-16">
        <div class="container mx-auto px-6 text-center">
             <h2 class="text-3xl font-bold font-display mb-4">Inquire Now</h2>
             <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-8">{{ events.inquiry_prompt }}</p>
             <a href="/en/contact/" class="bg-streats-red text-white px-10 py-3 rounded-full hover:bg-red-800 transition duration-300 text-lg font-semibold">
                Contact Us
            </a>
        </div>
    </section>
</main>