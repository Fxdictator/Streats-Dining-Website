<script src="https://cdn.jsdelivr.net/npm/macy@2"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var masonry = new Macy({
            container: '#masonry-container',
            trueOrder: false,
            waitForImages: false,
            useOwnImageLoader: false,
            mobileFirst: true,
            columns: 2,
            margin: {
                y: 16,
                x: 16
            },
            breakAt: {
                768: 3,
                1024: 4
            }
        });
    });
</script>